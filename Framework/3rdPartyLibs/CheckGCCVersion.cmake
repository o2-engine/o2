if(CMAKE_CXX_COMPILER_ID STREQUAL "GNU")
    execute_process(COMMAND ${CMAKE_CXX_COMPILER} -dumpfullversion OUTPUT_VARIABLE GCC_VERSION)

    message(STATUS "GCC version: ${GCC_VERSION}")

    string(REPLACE "." ";" VERSION_LIST ${GCC_VERSION})
    list(GET VERSION_LIST 0 GCC_MAJOR)
    list(GET VERSION_LIST 1 GCC_MINOR)

    math(EXPR GCC_MAJOR_INT "${GCC_MAJOR}")
    math(EXPR GCC_MINOR_INT "${GCC_MINOR}")

    set(GCC_MAJOR_INT ${GCC_MAJOR_INT} PARENT_SCOPE)
    set(GCC_MINOR_INT ${GCC_MINOR_INT} PARENT_SCOPE)
endif()
